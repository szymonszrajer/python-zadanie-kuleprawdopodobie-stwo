import math

def binom(n, k):                        # binomial coefficient
    if k == 1 or k == n:
        return 1
    if k > n:
        return 0
    else:
        return math.factorial(n) // math.factorial(k) // math.factorial(n - k)

n = float(input("white: "))
m = float(input("black: "))
k = float(input("how many will be drawn: "))
summ = binom (n + m, k)                  # all the ways to draw k balls form n+m balls
result = binom(n,k) + binom(m,k)         # all the ways to draw k balls from n (white) and m (black) ones
print(result / summ)                     # the propability
